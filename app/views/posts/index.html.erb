<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id='body', remote: true>
    <% @posts.each do |post| %>
      <tr>
        <td id='title'><%= post.title %></td>
        <td id='content'><%= post.content %></td>
        <td id='show'><%= link_to 'Show', post, remote: true %></td>
        <td id='edit'><%= link_to 'Edit', edit_post_path(post), remote: true %></td>
        <td id='delete'><%= link_to 'Destroy', post, method: :delete, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
